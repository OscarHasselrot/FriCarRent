@model FriCarRent.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";

}

<h1>Logga in som admin</h1>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Login" asp-controller="Admin">
            
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">E-post</label>
                <input asp-for="Email" class="form-control" placeholder="E-post" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Lösenord</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Lösenord" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <p class="text-danger">@ViewBag.Message</p>
            <div class="form-group">
                <input type="submit" value="Logga in" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>
