@model FriCarRent.Models.Car

@{
    ViewData["Title"] = "Delete";
}

<h1>Radera bil</h1>

<h3>Är du säker på att du vill radera den här bilen från systemet?</h3>
<div>
    <h4>Bil</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Märke:          
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            Modell:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            Årsmodell:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Radera" class="btn btn-danger" /> |
        <a asp-action="Index">Tillbaka till alla bilar</a>
    </form>
</div>
